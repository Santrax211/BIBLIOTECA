<!-- views/registrar.ejs -->
<%- layout('layout') %>
<h2>Registrar Préstamo</h2>
<form action="/prestamos/registrar" method="POST">
  <div class="form-group">
    <label for="IDUsuario">ID Usuario</label>
    <input type="number" class="form-control" name="IDUsuario" required>
  </div>
  <div class="form-group">
    <label for="IDEjemplar">ID Ejemplar</label>
    <input type="number" class="form-control" name="IDEjemplar" required>
  </div>
  <div class="form-group">
    <label for="Fecha_Prestamo">Fecha de Préstamo</label>
    <input type="date" class="form-control" name="Fecha_Prestamo" required>
  </div>
  <div class="form-group">
    <label for="Fecha_Devolucion">Fecha de Devolución</label>
    <input type="date" class="form-control" name="Fecha_Devolucion" required>
  </div>
  <button type="submit" class="btn btn-primary">Registrar</button>
</form>
